<script>
// Parallax effect for process-network section
(function() {
    const sections = [
        { bg: '.process-network-background', wrapper: '.process-network-wrapper' }
    ];

    let ticking = false;

    function updateParallax() {
        const scrolled = window.pageYOffset;

        sections.forEach(section => {
            const parallaxBg = document.querySelector(section.bg);
            const wrapper = document.querySelector(section.wrapper);

            if (!parallaxBg || !wrapper) return;

            const rect = wrapper.getBoundingClientRect();
            const speed = 0.5; // Increased for more noticeable effect

            // Only apply parallax when section is in viewport
            if (rect.bottom >= -200 && rect.top <= window.innerHeight + 200) {
                const yPos = -(scrolled - wrapper.offsetTop) * speed;
                parallaxBg.style.transform = `translateY(${yPos}px) translateZ(0)`;
            }
        });

        ticking = false;
    }

    function requestTick() {
        if (!ticking) {
            window.requestAnimationFrame(updateParallax);
            ticking = true;
        }
    }

    window.addEventListener('scroll', requestTick);
    window.addEventListener('resize', requestTick);

    // Initial call
    updateParallax();
})();
</script>