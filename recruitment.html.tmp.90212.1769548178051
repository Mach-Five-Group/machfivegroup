<script src="/js/recruitment.js" defer></script>

<script>
// Parallax effect for approach section
(function() {
    const parallaxBg = document.querySelector('.approach-background');
    if (!parallaxBg) return;

    let ticking = false;

    function updateParallax() {
        const scrolled = window.pageYOffset;
        const wrapper = document.querySelector('.approach-wrapper');
        if (!wrapper) return;

        const rect = wrapper.getBoundingClientRect();
        const speed = 0.3;

        // Only apply parallax when section is in viewport
        if (rect.bottom >= -200 && rect.top <= window.innerHeight + 200) {
            const yPos = -(scrolled - wrapper.offsetTop) * speed;
            parallaxBg.style.transform = `translateY(${yPos}px) translateZ(0)`;
        }

        ticking = false;
    }

    function requestTick() {
        if (!ticking) {
            window.requestAnimationFrame(updateParallax);
            ticking = true;
        }
    }

    window.addEventListener('scroll', requestTick);
    window.addEventListener('resize', requestTick);

    // Initial call
    updateParallax();
})();
</script>